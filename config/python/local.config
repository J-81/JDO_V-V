[Logging]
# Note: due to a quirk in the ISA library, this must be kept as DEBUG to ensure
#   debug file contents includes debug level logging statements.
LoggingConsole = DEBUG
HaltSeverity = 90

[GLDS]
Number = 194
PairedEnd = True

[Options]
#MaxFastQLinesToCheck = 10000000
# REMOVE THIS FOR DEBUG
MaxFastQLinesToCheck = 1000

[Raw]
# Raw V-V Parameters based on raw read files
FileSizeVariationToleranceYellow = 2
FileSizeVariationToleranceRed = 4

# Raw V-V Parameters.  Assessed based on MultiQC data.
SequenceLengthVariationTolerance = 0
TotalSequencesVariationTolerance = 2

PerBaseSequenceQualityGlobalValueThresholdRed = 99999
PerBaseSequenceQualityGlobalValueThresholdYellow = 99999
PerBaseSequenceQualityVariationToleranceRed = 2
PerBaseSequenceQualityVariationToleranceYellow = 3

PerBaseNContentGlobalValueThresholdRed = 8
PerBaseNGlobalValueThresholdYellow = 3
PerBaseNVariationToleranceRed = 1
PerBaseNVariationToleranceYellow = 2

PercentTopOverrepresentedVariationToleranceRed = 4
PercentTopOverrepresentedVariationToleranceYellow = 2
PercentTopOverrepresentedGlobalThresholdRed = 60
PercentTopOverrepresentedGlobalThresholdYellow = 40

PercentDuplicatesVariationToleranceRed = 4
PercentDuplicatesVariationToleranceYellow = 2
PercentDuplicatesGlobalThresholdRed = 60
PercentDuplicatesGlobalThresholdYellow = 40

PercentGCVariationToleranceRed = 4
PercentGCVariationToleranceYellow = 2
 # set to 9999999 to effecively disable global threshold requirement
PercentGCGlobalThresholdRed = 9999999
PercentGCGlobalThresholdYellow = 9999999

[Trimmed]
# Trimmed V-V Parameters.  Assessed based on MultiQC data.
SequenceLengthVariationTolerance = 0.5
PercentGCVariationTolerance = 2
TotalSequencesVariationTolerance = 2
PercentDuplicatesVariationTolerance = 2

[Rsem]
CountsVariationTolerance = 0

[Deseq2]
HasERCC = True

[Naming]
# this is the suffix attached by fastQC
RawFastQCSuffix = _raw_fastqc
RawReadsSuffix = _raw
TrimmedFastQCSuffix = _trimmed_fastqc
TrimmedReadsSuffix = _trimmed

[Paths]
DataPath = /home/joribello/Documents/OneDrive/NASA/Fall2020/project/V-V_scripts/VV_testing/broken_001/GLDS-${GLDS:Number}
ISAZip = ${DataPath}/Metadata/GLDS-${GLDS:Number}_metadata_GLDS-${GLDS:Number}-ISA.zip
RawReadDir = ${DataPath}/00-RawData/Fastq
RawFastQCDir = ${DataPath}/00-RawData/FastQC_Reports
RawMultiQCDir = ${DataPath}/00-RawData/FastQC_Reports/raw_multiqc_report/multiqc_data
TrimmedReadDir = ${DataPath}/01-TG_Preproc/Fastq
TrimmedFastQCDir = ${DataPath}/01-TG_Preproc/FastQC_Reports
TrimmedMultiQCDir = ${DataPath}/01-TG_Preproc/FastQC_Reports/trimmed_multiqc_report/multiqc_data
StarParentDir = ${DataPath}/02-STAR_Alignment
RsemParentDir = ${DataPath}/03-RSEM_Counts
Deseq2ParentDir = ${DataPath}/04-DESeq2_NormCounts
